<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|bottom"
    android:orientation="vertical"

    android:background="@drawable/grad_bac3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/LockAppIcon"
            android:elevation="12dp"

            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:src="@drawable/logo_plain" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/TxtEnterPasscode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="Draw Pattern"
                android:textColor="#FFF"
                android:textSize="15sp" />

            <com.andrognito.patternlockview.PatternLockView
                android:id="@+id/pattern_lock_view"
                android:layout_marginTop="35dp"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:layout_below="@+id/TxtEnterPasscode" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/fingerfrint_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_fingerprint" />

        <TextView
            android:id="@+id/TxtForgetPasscode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:padding="16dp"
            android:text="Forget Pattern?"
            android:textColor="#FFF" />

    </LinearLayout>

</LinearLayout>
